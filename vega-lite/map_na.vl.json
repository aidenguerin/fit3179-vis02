{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 1000,
  "height": 600,
  "projection": {"type": "mercator"},
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/aidenguerin/fit3179-vis02/main/mapping/north_america_clipped.json",
        "format": {"type": "topojson", "feature": "ne_10m_admin_0_countries"}
      },
      "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white"}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/aidenguerin/fit3179-vis02/main/web-scraping/data/raw_resort_locations.csv"
      },
      "transform": [{"filter":{"field":"country-short","oneOf":["US","CA"]}}],
      "mark": {"type": "circle"},
      "encoding": {
        "color": {"field": "pass", "type": "nominal"},
        "latitude": {"field": "lat", "type": "quantitative"},
        "longitude": {"field": "lng", "type": "quantitative"},
        "tooltip":[
          {"field": "short-name","type": "nominal", "title":"Resort"},
          {"field": "country-long", "type": "nominal", "title":"Country"}]
      }
    }
  ],
  "config": {}
}