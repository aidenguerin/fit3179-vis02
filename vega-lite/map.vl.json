{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 300,
  "height": 450,
  "title": "Location of ski resorts",
  "projection": {"type": "mercator"},
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/aidenguerin/fit3179-vis02/main/mapping/ne_10m_admin_0_countries.json",
        "format": {"type": "topojson", "feature": "ne_10m_admin_0_countries"}
      },
      "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white"}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/aidenguerin/fit3179-vis02/main/web-scraping/data/raw_resort_locations.csv"
      },
      "mark": {"type": "circle"},
      "encoding": {
        "latitude": {"field": "lat", "type": "quantitative"},
        "longitude": {"field": "lng", "type": "quantitative"},
        "tooltip":{
          "field": "short-name",
          "type": "nominal"
        }
      }
    }
  ],
  "config": {}
}